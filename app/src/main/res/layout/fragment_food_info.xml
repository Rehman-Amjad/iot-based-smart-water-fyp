<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FoodInfoFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/primaryColor"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        android:padding="9dp"
        android:text="Food Info" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/food_tray"
        android:scaleType="fitXY"
        android:contentDescription="@string/todo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calender"
            app:tint="@color/primaryColor" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:padding="9dp"
            android:text="Date: please wait" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center|start"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/clock"
            app:tint="@color/primaryColor" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:padding="9dp"
            android:text="Time: please wait" />


    </LinearLayout>




    <Button
        android:id="@+id/btnOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primaryColor"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="Food Tray Open"
        android:textColor="@color/white"
        android:elevation="5dp"
        android:visibility="visible"
        app:cornerRadius="10dp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:background="@drawable/count_down_background"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        android:padding="9dp"
        android:text="0"
        android:visibility="invisible"
        />

</LinearLayout>